<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <!-- IMPORT AJOUTÃ‰ ICI -->
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" styleClass="root-pane" stylesheets="@../css/style-bmo.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="akandan.bahou.kassy.client.controleur.ControleurFenetreConnexion">
    <children>
        <VBox fx:id="panneauConnexion" alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="%login.title">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="etiquetteMessageErreurConnexion" styleClass="etiquette-erreur" textFill="RED" wrapText="true" minHeight="30.0"/>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%login.email" />
                        <TextField fx:id="champIdentifiantConnexion" promptText="%login.email.prompt" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%login.password" />
                        <PasswordField fx:id="champMotDePasseConnexion" promptText="%login.password.prompt" />
                    </children>
                </VBox>
                <Button fx:id="boutonSeConnecter" defaultButton="true" maxWidth="Infinity" mnemonicParsing="false" onAction="#actionSeConnecter" text="%login.button" />
                <Hyperlink fx:id="lienCreerCompte" onAction="#actionAfficherInscription" text="%login.createaccountlink" />
            </children>
        </VBox>
        <VBox fx:id="panneauInscription" alignment="CENTER" managed="false" spacing="15.0" visible="false" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="%signup.title">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="etiquetteMessageErreurInscription" styleClass="etiquette-erreur" textFill="RED" wrapText="true" minHeight="30.0"/>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%signup.fullname" />
                        <TextField fx:id="champNomCompletInscription" promptText="%signup.fullname.prompt" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%signup.identifier" />
                        <TextField fx:id="champIdentifiantInscription" promptText="%signup.identifier.prompt" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%signup.password" />
                        <PasswordField fx:id="champMotDePasseInscription" promptText="%signup.password.prompt" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="%signup.confirmpassword" />
                        <PasswordField fx:id="champConfirmationMotDePasseInscription" promptText="%signup.confirmpassword.prompt" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="boutonValiderInscription" defaultButton="true" mnemonicParsing="false" onAction="#actionValiderInscription" text="%signup.button" />
                        <Button fx:id="boutonAnnulerInscription" cancelButton="true" mnemonicParsing="false" onAction="#actionAnnulerInscription" text="%button.cancel" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>