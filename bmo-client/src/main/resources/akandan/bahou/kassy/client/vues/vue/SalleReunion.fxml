<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="akandan.bahou.kassy.client.controleur.ControleurSalleReunion">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="etiquetteTitreReunionSalle" text="%meeting.room.title.placeholder">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="etiquetteDescriptionReunionSalle" text="%meeting.room.description.placeholder" wrapText="true" />
            </children>
        </VBox>
    </top>
    <left>
        <VBox prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="5.0" top="0.0" />
            </BorderPane.margin>
            <children>
                <Label text="%meeting.room.participants" underline="true">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <ListView fx:id="listViewParticipants" VBox.vgrow="ALWAYS" />
                <Button fx:id="boutonLeverMain" mnemonicParsing="false" onAction="#actionLeverMain" text="%button.raise.hand" maxWidth="Infinity" />
            </children>
        </VBox>
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="5.0" right="10.0" top="0.0" />
            </BorderPane.margin>
            <children>
                <Label text="%meeting.room.chat" underline="true">
                    <font><Font name="System Bold" size="14.0" /></font>
                    <VBox.margin><Insets bottom="5.0" /></VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <TextArea fx:id="textAreaChatHistorique" editable="false" wrapText="true" />
                    </content>
                </ScrollPane>
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="champSaisieMessageChat" HBox.hgrow="ALWAYS" promptText="%meeting.room.chat.prompt" onAction="#actionEnvoyerMessageChat"/>
                        <Button fx:id="boutonEnvoyerMessageChat" mnemonicParsing="false" onAction="#actionEnvoyerMessageChat" text="%button.send" />
                    </children>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <!-- <Button fx:id="boutonPartageEcran" mnemonicParsing="false" text="%button.share.screen" disable="true" /> -->
                <Button fx:id="boutonQuitterReunion" mnemonicParsing="false" onAction="#actionQuitterReunion" text="%button.leave.meeting" styleClass="button-danger" />
            </children>
        </HBox>
    </bottom>
</BorderPane>