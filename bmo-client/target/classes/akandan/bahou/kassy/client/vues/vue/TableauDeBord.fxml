<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="akandan.bahou.kassy.client.controleur.ControleurTableauDeBord">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label fx:id="etiquetteNomUtilisateur" text="%dashboard.user.name.placeholder">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="etiquetteRoleUtilisateur" text="%dashboard.user.role.placeholder" />
                        <HBox HBox.hgrow="ALWAYS" />
                        <Button fx:id="boutonMonProfil" mnemonicParsing="false" onAction="#actionMonProfil" text="%dashboard.button.myprofile" />
                        <Button fx:id="boutonDeconnexion" mnemonicParsing="false" onAction="#actionDeconnexion" text="%dashboard.button.logout" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="boutonCreerReunion" mnemonicParsing="false" onAction="#actionCreerNouvelleReunion" text="%dashboard.button.createMeeting" />
                        <Button fx:id="boutonAdministrationUtilisateurs" mnemonicParsing="false" onAction="#actionAdministrerUtilisateurs" text="%dashboard.button.adminUsers" />
                        <HBox HBox.hgrow="ALWAYS" />
                        <Label text="%dashboard.label.filterMeetings" />
                        <ComboBox fx:id="comboBoxFiltreReunions" prefWidth="200.0" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableVueReunions" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colonneTitreReunion" prefWidth="150.0" text="%column.meeting.title" />
                <TableColumn fx:id="colonneDescriptionReunion" prefWidth="250.0" text="%column.meeting.description" />
                <TableColumn fx:id="colonneDateDebutReunion" prefWidth="150.0" text="%column.meeting.startdatetime" />
                <TableColumn fx:id="colonneStatutReunion" prefWidth="120.0" text="%column.meeting.status" />
                <TableColumn fx:id="colonneActionsReunion" prefWidth="200.0" text="%column.meeting.actions" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <Label text="%app.title" BorderPane.alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets bottom="5.0" right="10.0" top="5.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>