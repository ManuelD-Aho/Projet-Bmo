<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="akandan.bahou.kassy.client.controleur.ControleurAdministrationUtilisateurs">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="%admin.users.title">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="champRechercheUtilisateur" promptText="%admin.users.search.prompt" HBox.hgrow="ALWAYS" />
                        <!-- Le bouton Rechercher est retirÃ©, la recherche est dynamique -->
                        <Button fx:id="boutonCreerUtilisateur" mnemonicParsing="false" onAction="#actionCreerNouvelUtilisateur" text="%admin.users.button.create" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableVueUtilisateurs" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colonneIdUtilisateur" prefWidth="50.0" text="%column.user.id" />
                <TableColumn fx:id="colonneNomComplet" prefWidth="180.0" text="%column.user.fullname" />
                <TableColumn fx:id="colonneIdentifiant" prefWidth="150.0" text="%column.user.identifier" />
                <TableColumn fx:id="colonneRole" prefWidth="120.0" text="%column.user.role" />
                <TableColumn fx:id="colonneStatutCompte" prefWidth="100.0" text="%column.user.status" />
                <TableColumn fx:id="colonneDateCreation" prefWidth="150.0" text="%column.user.creationdate" />
                <TableColumn fx:id="colonneDerniereConnexion" prefWidth="150.0" text="%column.user.lastlogin" />
                <TableColumn fx:id="colonneActionsUtilisateur" prefWidth="150.0" text="%column.user.actions" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="boutonRetourTableauDeBord" mnemonicParsing="false" onAction="#actionRetourTableauDeBord" text="%button.return.dashboard" />
            </children>
        </HBox>
    </bottom>
</BorderPane>