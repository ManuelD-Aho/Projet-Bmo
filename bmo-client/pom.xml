<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>akandan.bahou.kassy</groupId>
        <artifactId>bmo</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>bmo-client</artifactId>
    <name>BMO :: Client</name>
    <description>Module client JavaFX de l'application BMO.</description>

    <dependencies>
        <dependency>
            <groupId>akandan.bahou.kassy</groupId>
            <artifactId>bmo-commun</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <!-- La configuration est héritée du parent, mais on peut la surcharger si besoin -->
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>${javafx.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <!-- Default configuration for running with javafx:run -->
                        <id>default-cli</id>
                        <configuration>
                            <mainClass>akandan.bahou.kassy.client.coeur.AppPrincipale</mainClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Alternative avec maven-shade-plugin si javafx-maven-plugin ne convient pas pour le packaging final -->
            <!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <configuration>
                    <transformers>
                        <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <manifestEntries>
                                <Main-Class>akandan.bahou.kassy.client.coeur.AppPrincipaleLauncher</Main-Class>
                                <X-JavaFX-Main-Class>akandan.bahou.kassy.client.coeur.AppPrincipale</X-JavaFX-Main-Class>
                            </manifestEntries>
                        </transformer>
                    </transformers>
                    <finalName>${project.artifactId}-uber</finalName>
                </configuration>
            </plugin>
            -->
        </plugins>
    </build>
</project>